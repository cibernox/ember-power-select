{{#power-select
  options=currentOptions
  selected=selected
  closeOnSelect=false
  onchange=(action "onchange")
  optionsComponent="animated-options"
  search=(action "search")
  as |levelOrOption|
}}
  {{#if levelOrOption.parentLevel}}
    <strong>Back</strong>
  {{else if levelOrOption.levelName}}
    <strong>{{levelOrOption.levelName}} ></strong>
  {{else}}
    {{levelOrOption}}
  {{/if}}
{{/power-select}}