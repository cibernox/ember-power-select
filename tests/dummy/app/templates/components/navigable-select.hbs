<PowerSelect @options={{currentOptions}} @selected={{selected}} @closeOnSelect={{false}} @onChange={{action "onchange"}} @optionsComponent="animated-options" @search={{action "search"}} as |levelOrOption|>
  {{#if levelOrOption.parentLevel}}
    <strong>&lt; Back</strong>
  {{else if levelOrOption.levelName}}
    <strong>{{levelOrOption.levelName}} &gt;</strong>
  {{else}}
    {{levelOrOption}}
  {{/if}}
</PowerSelect>