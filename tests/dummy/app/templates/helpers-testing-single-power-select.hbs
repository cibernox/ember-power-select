<h3>Helpers testing with single select</h3>
<div class="select-choose">
  <PowerSelect @options={{numbers}} @selected={{selected}} @onChange={{action (mut selected)}} @searchEnabled={{true}} as |num|>
    {{num}}
  </PowerSelect>
</div>

{{#if selected}}
  <span class="select-choose-target">You've selected: {{selected}}</span>
{{/if}}
