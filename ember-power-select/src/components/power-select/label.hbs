{{#if (eq @labelTag "span")}}
  <span
    id={{@labelId}}
    class="ember-power-select-label"
    ...attributes
    {{on "click" this.onLabelClick}}
  >
    {{@labelText}}
  </span>
{{else}}
  <label
    id={{@labelId}}
    class="ember-power-select-label"
    ...attributes
    for={{@triggerId}}
    {{on "click" this.onLabelClick}}
  >
    {{@labelText}}
  </label>
{{/if}}