<PowerSelect
  @searchEnabled={{true}}
  @options={{this.countries}}
  @searchField="name"
  @selected={{this.selected}}
  @onChange={{fn (mut this.selected)}}
  @labelText="Country"
  @beforeOptionsComponent={{component
    "power-select/before-options"
    autofocus=false
  }}
  as |country|
>
  {{country.name}}
</PowerSelect>