{{#if searchEnabled}}
  <div class="ember-power-select-search">
    <input
      type="search"
      autocomplete="off"
      autocorrect="off"
      autocapitalize="off"
      spellcheck="false"
      role="combobox"
      class="ember-power-select-search-input"
      value={{select.searchText}}
      aria-activedescendant={{highlightedId}}
      aria-owns={{listboxId}}
      aria-controls={{resultsCountId}}
      placeholder={{searchPlaceholder}}
      oninput={{onInput}}
      onfocus={{onFocus}}
      onblur={{onBlur}}
      onkeydown={{action "onKeydown"}}>
  </div>
{{/if}}

<div role="status" aria-live="polite" id={{resultsCountId}} aria-atomic="true" class="ember-power-select-visuallyhidden">
  {{pluralize resultsCount 'result'}}
</div>
