{{#if multiple}}
  {{#ember-power-select/multiple
    options=options
    selected=selected
    onchange=onchange
    disabled=disabled
    loadingMessage=loadingMessage
    noMatchesMessage=noMatchesMessage
    selectedComponent=selectedComponent
    matcher=matcher
    renderInPlace=renderInPlace
    search=search
    searchField=searchField
    dropdownPosition=dropdownPosition
    baseHasBlock=hasBlock
    hasInverseBlock=(hasBlock "inverse")
    class=class
    optionLabelPath=optionLabelPath
    as |option|}}
    {{yield option}}
  {{else}}
    {{yield to="inverse"}}
  {{/ember-power-select/multiple}}
{{else}}
  {{#ember-power-select/single
    options=options
    selected=selected
    onchange=onchange
    disabled=disabled
    placeholder=placeholder
    searchEnabled=searchEnabled
    searchPlaceholder=searchPlaceholder
    loadingMessage=loadingMessage
    noMatchesMessage=noMatchesMessage
    searchMessage=searchMessage
    selectedComponent=selectedComponent
    matcher=matcher
    searchField=searchField
    renderInPlace=renderInPlace
    search=search
    allowClear=allowClear
    dropdownPosition=dropdownPosition
    baseHasBlock=hasBlock
    hasInverseBlock=(hasBlock "inverse")
    class=class
    optionLabelPath=optionLabelPath
    as |option|}}
    {{yield option}}
  {{else}}
    {{yield to="inverse"}}
  {{/ember-power-select/single}}
{{/if}}
